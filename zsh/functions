# vim:syntax=zsh

function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status -sb
  fi
}

source_if_exists() {
  local file ;
  for file ; do
    [ -f "${file}" ] && source "${file}" ;
  done
}

_not_inside_tmux() { [[ -z "$TMUX" ]] }

ensure_tmux_is_running() {
  if _not_inside_tmux; then
    tat
  fi
}
