	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l = log --graph --oneline --pretty=format:'%C(yellow)%h %C(green)%cr %C(blue)%an %Creset%s %Cred%d%Creset'
	pr = pull-request
	s = status -sb
	ss = status
	st = status
	type = cat-file -t
	uncommit = reset --soft HEAD^
